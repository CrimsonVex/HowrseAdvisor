{
  "manifest_version": 3,
  "name": "HowrseAdvisor",
  "version": "1.0",
  "description": "My own little tweaks to the Howrse website",
  "action": {
    "default_popup": "./html/popup.html"
  },
  "content_scripts": [
    {
      "js": ["assets/jquery-3.6.1.js","scripts/chrome_store_copy.js","scripts/content.js"],
      "matches": [
        "https://us.howrse.com/elevage/chevaux/cheval*",
        "https://us.howrse.com/elevage/chevaux/centreInscription*"
      ]
    }
  ],
  "permissions": [
    "webNavigation",
    "storage"
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module",
    "persistant": true
  }
}
